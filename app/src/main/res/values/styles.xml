<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="btn_main">
        <item name="android:layout_width">175dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="btn_valider">
        <item name="android:layout_width">105dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">25dp</item>
    </style>
    <style name="btn_retour">
        <item name="android:layout_width">105dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">25dp</item>
    </style>
    <style name="btn_wizard">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:text">+</item>
    </style>
    <style name="titre">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FF00AA</item>
        <item name="android:textSize">55dp</item>
        <item name="android:text">@string/titre</item>
    </style>
    <style name="sousTitre">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#0000FF</item>
        <item name="android:textSize">40dp</item>
    </style>
    <style name="tv_erreur">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FF5900</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="et_new">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="et_ajoutDesc">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="et_rechPrix">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:inputType">numberDecimal</item>
    </style>
    <style name="et_rechVille">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="tv_indicDesc">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="tv_valDesc">
        <item name="android:layout_width">175dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="tv_valDescDesc">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="tv_res">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">35dp</item>
    </style>
    <style name="rb_ville">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
